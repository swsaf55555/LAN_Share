<Window x:Class="WifiDownload.QRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="扫描下载" Height="420" Width="380" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="ImgQr" Width="320" Height="320" Stretch="Uniform" />
            <TextBlock x:Name="TxtUrl" TextWrapping="Wrap" TextAlignment="Center" Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</Window>